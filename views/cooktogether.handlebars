<main>
  <section class="d-flex flex-row justify-content-evenly m-5 p-3">
    <div>
      <h2 class="p-1">Find a new pal!</h2>
      
        <p id="user-bio" class="card-text">
          This is my bio. bio bio bio bio bio bio bio bio bio bio bio bio
          bio bio bio bio bio bio bio bio.
        </p>
     
      <a href="# " class="btn btn-outline-success">Search</a>
      <a href="# " class="btn btn-outline-success">Update Bio</a>
    </div>
    <div class="card m-4" style="width: 25vw">
      <img
        src="https://images.unsplash.com/photo-1452857297128-d9c29adba80b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=967&q=80"
        class="card-img-top"
        alt="..."
      />
      
    </div>
  </section>
  <div>
          <h2>Upcoming Cooktogether </h2>
          {{#each upcomingCookTogethers as |upcoming|}}
          
          <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src={{upcoming.recipe_image}} alt="..." style="max-width: 200px;">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"> {{upcoming.recipe_title}}  with {{upcoming.user.first_name}}  </h5>
                  <p class="card-text">Meeting for {{upcoming.meal_type}} on {{upcoming.datetime}} </p>
                  <p class="card-text">Get in touch: {{upcoming.contact_details}}</p>
                  <a href='/recipe/{{upcoming.recipe_id}}' target="_blank"  class="anchor-button-primary"> View recipe </a>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>

  <section 
    class="container carousel-container"
    style="justify-content: center"
  >
    <!-- carousel Upcoming -->
        <div
          id="carouselUpcoming"
          class="carousel slide p-5 justify-content-evenly"
          data-bs-touch="false"
          data-bs-interval="false"
          style="width: 80vw"
        >
          <div><h4>See all upcoming Cook Togethers</h4></div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="d-flex flex-row justify-content-evenly">
                <div class="card m-4" style="width: 25vw">
                  <img
                    src="https://images.unsplash.com/photo-1515683359900-6922e4964be1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTA4fHxmb29kfGVufDB8MHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
                    class="d-block w-100"
                    alt="..."
                  />
                  <div class="card-body">
                    <h5 class="card-title">< Recipe name > with < user ></h5>
                    <p class="card-text">when: < Time and Date ></p>
                    <p class="card-text">contact: < Contact info ></p>
                    <a href="" class="btn btn-success">Recipe</a>
                  </div>
                </div>
                <div class="card m-4" style="width: 25vw">
                  <img
                    src="https://images.unsplash.com/photo-1497888329096-51c27beff665?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1051&q=80"
                    class="d-block w-100"
                    alt="..."
                  />
                  <div class="card-body">
                    <h5 class="card-title">< Recipe name > with < user ></h5>
                    <p class="card-text">when: < Time and Date ></p>
                    <p class="card-text">contact: < Contact info ></p>
                    <a href="/recipe" class="btn btn-success">Recipe</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselUpcoming"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselUpcoming"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
  </section>
</main>