{{#if loggedIn}}
  {{>private-nav}}  
{{else}}
  {{>public-nav}}  
{{/if}}
<main>
  <div class="mb-5">
    <h1 class="mb-3 text-center">Your yummy recipes</h1>
    {{#if recipes}}
      <section class="card-group p-2" style="justify-content: space-around">
        <div class="d-inline-flex flex-wrap justify-content-center p-4">
          {{#each recipes as |recipe|}}
          <a href="/recipe/{{recipe.recipe_id}}">
            <div
              class="card border border-warning d-inline-flex p-2 bd-highlight m-3"
              style="width: 40vw; height: 40vw; background-color: #304922"
            ><a href="/recipe/{{recipe.recipe_id}}"              
                >
              <div class="border border-success card-body mx-auto">
                <img src={{recipe.image}} class="card-img-top mb-3" alt="Image of dish" />
                <div class="position-relative">
                <h5 class="card-title position-absolute top-50 start-50 translate-middle text-center recipe-title mb-3">{{recipe.dish_name}}</h5>
                </div>
              </div>
              <div class="d-grid gap-2 col-6 mx-auto row row-cols-1">
                <a href='/recipe/{{recipe.recipe_id}}' target="_blank" class="btn main-button-style"> View recipe </a>
                </div>
                <div>
                <button id="{{recipe.recipe_id}}" name="remove-from-favourites-btn"><i class="far fa-trash-alt" style="color: #8EB44F;"></i></button>
              </div>
            </div>
          {{/each}}
        </div>
      </section>
    {{ else }} 
      <div class="text-center">
        <h3> Oh no! You don't have any recipes saved yet!</h3>
        <h3> Search now to get cooking.</h3>
        {{>private-searchbar}}
      </div> 
    {{/if}}
  </div>
</main>
{{>footer}}
