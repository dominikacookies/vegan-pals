<figure id="image-container" class="mx-auto" style="width: 50vw">
  <figcaption id="recipe-name" class="text-center">
    <h2>{{recipeData.title}}</h2>
  </figcaption>
  <img src={{recipeData.image}} alt="Recipe image" style="width: 50vw" />
</figure>
<section class="row text-center pb-4" style="justify-content: center">
  <div class="col-sm-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Cook time:</h5>
        <p class="card-text">{{recipeData.prepTime}}</p>
      </div>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Serves:</h5>
        <p class="card-text">{{recipeData.servings}}</p>
      </div>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="card">
      <div class="card-body">
        <a href=""><h5 class="card-title"><i class="fas fa-heart"></i></h5></a>
        <p class="card-text">Add to Favourites</p>
      </div>
    </div>
  </div>
</section>
<section class="row">
  <div class="col-sm-3 ms-5">
    <div class="card">
      <h3>Ingredients:</h3>
      <ul>
        {{#each recipeData.ingredients}}
          <li>{{recipeData.ingredients}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="col-sm-6 m-5">
    <div class="directions">
      <h3>Directions:</h3>
      <p>
        {{{recipeData.directions}}}
      </p>

    </div>
  </div>
</section>