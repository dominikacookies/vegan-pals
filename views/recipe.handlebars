{{#if loggedIn}}
  {{>private-nav}}  
{{else}}
  {{>public-nav}}  
{{/if}}

<main><figure id="image-container" class="mx-auto mb-4" style="width: 50vw">
    <figcaption id="recipe-name" class="text-center">
      <h2 name="recipe-title" class="m-5 fw-bold" style="color: #304922;">{{title}}</h2>
    </figcaption>
    <img src={{image}} name="recipe-image" class="recipe-image" alt="Recipe image" style="width: 50vw; height: 40px border-color:#304922" />
  </figure>

  <div class="container d-flex justify-content-center">
  <section
    class="card-group row text-center pb-4 mb-5"
    style="justify-content: center"
  >
    <div class="col">
      <div class="card recipe-card-sm">
        <div class="card-body">
          <h5 class="card-title">Cook time:</h5>
          <p class="card-text">{{prepTime}} minutes</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card recipe-card-sm">
        <div class="card-body">
          <h5 class="card-title">Serves:</h5>
          <p class="card-text">{{servings}}</p>
        </div>
      </div>
    </div>
    
     <div class="col">
      <div class="card" style="background-color: #304922;">
        <div class="card-body card-title">
         
        {{#if loggedIn}}
           <button id="{{id}}" name="add-to-favourites-btn" type="button" class="card body" style="background-color: #304922; color:#ED6160"><i class="far fs-1 fa-heart"></i></button>
        {{else}}
            <button id="{{id}}" name="add-to-favourites-btn" type="button" data-bs-toggle="modal" data-bs-target="#login-modal" class="btn main-button-style" style="background-color: #304922; color:#ED6160"><i class="far fs-1 fa-heart"></i></button>
        {{/if}}
        </div>
      </div>
    </div>

  </section>
  </div>
  <section class="row">
    <div class="col-sm-3 ms-5">
      <div class="card">
        <h3 class="ms-3"> Ingredients: </h3>
        <ul class="list-group text-center list-group-flush ingredient-list">
          {{#each ingredients as |ingredient|}}
            <li class="list-group-item">{{ingredient}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-sm-6 m-5">
      <div class="directions">
        <h3>Directions:</h3>
        <p>
          {{{directions}}}
        </p>

      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div class="modal fade" id="login-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Login or Sign up</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>You must be logged in to save a recipe.</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="prompt-login-btn" class="btn btn-secondary" data-bs-dismiss="modal">Log in</button>
        <button type="button" id="prompt-signup-btn" class="btn btn-primary">Sign up</button>
      </div>
    </div>
  </div>
</div>
</main>
{{>footer}}
