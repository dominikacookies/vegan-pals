{{#if loggedIn}}
  {{>private-nav}}  
{{else}}
  {{>public-nav}}  
{{/if}}

<main><figure id="image-container" class="mx-auto mb-4" style="width: 50vw">
    <figcaption id="recipe-name" class="text-center">
      <h2 class="m-5 fw-bold" style="color: #304922;">{{title}}</h2>
    </figcaption>
    <img src={{image}} class="recipe-image" alt="Recipe image" style="width: 50vw; height: 40px border-color:#304922" />
  </figure>

  <div class="container d-flex justify-content-center">
  <section
    class="card-group row text-center pb-4 mb-5"
    style="justify-content: center"
  >
    <div class="col">
      <div class="card recipe-card-sm">
        <div class="card-body">
          <h5 class="card-title">Cook time:</h5>
          <p class="card-text">{{prepTime}} minutes</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card recipe-card-sm">
        <div class="card-body">
          <h5 class="card-title">Serves:</h5>
          <p class="card-text">{{servings}}</p>
        </div>
      </div>
    </div>
    
    <div class="col">
      <div class="card" style="background-color: #304922;">
         <div class="card-body">
            <a href="/myrecipes">
          <button type="submit" class="btn" style="background-color: #304922; color:#ED6160"><i class="far fs-1 fa-heart"></i></button>
          </a></div> </div>
                
  </div>
  <div class="col-sm-2">
    <div class="card">
    </div>
  </section>
  </div>
  <section class="row">
    <div class="col-sm-3 ms-5">
      <div class="card">
        <h3 class="ms-3"> Ingredients: </h3>
        <ul class="list-group text-center list-group-flush ingredient-list">
          {{#each ingredients as |ingredient|}}
            <li class="list-group-item">{{ingredient}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-sm-6 m-5">
      <div class="directions">
        <h3>Directions:</h3>
        <p>
          {{{directions}}}
        </p>

      </div>
    </div>
  </div>
</section>
</main>
{{>footer}}