 {{>private-nav}}
 <h1 class="text-center mb-4">Hey {{name}}</h1> 

    <div class="d-flex flex-row justify-content-evenly">
        <div class="mt-5">
        {{>private-searchbar}}
       

        <div class="mb-5">
          <h2 class="mb-3 text-center">Upcoming Cooktogether </h2>
          <div class="card mb-3 mx-auto" style="max-width: 70vw;">
            <div class="row">
              <div class="col-md-6">
                <img src={{upcomingCooktogetherDetails.recipe_image}} alt="..." style="height: 25vw;">
              </div>
              <div class="col-md-6">
                <div class="card-body">
                  <h5 class="card-title"> {{upcomingCooktogetherDetails.recipe_title}}  with {{upcomingCooktogetherDetails.user.first_name}}  </h5>
                  <p class="card-text">Meeting for {{upcomingCooktogetherDetails.meal_type}} on {{upcomingCooktogetherDetails.datetime}} </p>
                  <p class="card-text">Get in touch: {{upcomingCooktogetherDetails.contact_details}}</p>
                  <a href='/recipe/{{upcomingCooktogetherDetails.recipe_id}}' class="btn main-button-style"> View recipe </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        

        <div class="mb-5">
          <h2 class="mb-3 text-center">Your yummy recipes </h2>
            <section class="d-inline-flex flex-wrap justify-content-center p-4" >
              
              {{#each latestSavedRecipes as |recipe|}}
              <div class="card d-inline-flex mx-auto justify-content-between p-2 bd-highlight" style="width: 20rem">
            <div class="card-body mx-auto">
              <img src={{recipe.image}} class="card-img-top" alt="Image of dish" />
              <h5 class="card-title text-center pt-4">{{recipe.dish_name}}</h5>
            </div>
            <div class="d-flex flex-wrap justify-content-around">
              <a href='/recipe/{{recipe.recipe_id}}' target="_blank" class="btn main-button-style"> View recipe </a>
              <a href='/cooktogether/myrecipes/pals/{{recipe.recipe_id}}' class="btn main-button-style"> Choose recipe </a>
              
            </div>
          </div>
         
                          {{/each }}
            </section>
        </div> 
      </div>