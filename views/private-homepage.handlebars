{{>private-nav}}
<main>
  <h1 class="text-center mb-4">Hey {{name}}</h1>
  <div class="d-flex flex-row justify-content-evenly">
    <div class="mt-5">
      {{>private-searchbar}}
      <section id="nearest-upcoming" class="mb-5">
        <h2 class="upcoming-header mb-3 text-center">Upcoming Cooktogether</h2>

        {{#if mostUpcomingCooktogether}}
        <div class="card mb-3 mx-auto" style="max-width: 70vw">
          <div class="row">
            <div class="col-md-6">
              <img
                src="{{mostUpcomingCooktogether.recipe_image}}"
                alt="..."
                style="height: 25vw;"
              />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title">
                  {{mostUpcomingCooktogether.recipe_title}} with
                  {{mostUpcomingCooktogether.user.first_name}}
                </h5>
                <p class="card-text">
                  Meeting for {{mostUpcomingCooktogether.meal_type}} on
                  {{mostUpcomingCooktogether.datetime}}
                </p>
                <p class="card-text">
                  Get in touch: {{mostUpcomingCooktogether.contact_details}}
                </p>
                <a
                  href="/recipe/{{mostUpcomingCooktogether.recipe_id}}"
                  class="btn main-button-style"
                >
                  View recipe
                </a>
              </div>
            </div>
          </div>
        </div>
      {{else}}
      <div class="text-center">
        <h3> You don't have any cooktogethers yet. </h3> 
        <p> How it works: </p>
        <p> 1. Save a recipe,  2. Select a pal,  3. Get cooking together! </p>
        <a href="/cooktogether/myrecipes" class="btn btn-primary">Get started!</a>
        <a href="#search-bar" class="btn btn-outline-success">Find a recipe</a>
      </div>
      {{/if}}


      </section>
      <section id="your-recipes" class="mb-5">
        <h2 class="mb-3">Your yummy recipes</h2>
        <section class="card-group p-2" style="justify-content: space-around">
          {{#if latestSavedRecipes}}
            {{#each latestSavedRecipes as |recipe|}}
            <a href="/recipe/{{recipe.recipe_id}}">
              <div
                class="
                  card
                  d-inline-flex
                  justify-content-between
                  p-2
                  bd-highlight
                "
                style="width: 18rem; height: 20rem; background-color: #304922"
              >
                <div class="card-body mx-auto">
                  <img
                    src="{{recipe.image}}"
                    class="card-img-top mb-3"
                    alt="Image of dish"
                  />
                  <h5 class="card-title btn recipe-title text-center fw-bold" style="width: 15rem;">
                    {{recipe.dish_name}}
                  </h5>
                </div>
              </div>
            </a>
            {{/each }}
          {{else}}
            <div class="text-center">
              <h3> You don't have any recipes saved yet. </h3> 
              <a href="#search-bar" class="btn btn-primary">Find a recipe now</a>
            </div>
          {{/if}}
        </section>
      </section>
    </div>
  </div>
</main>
{{>footer}}