<div
  class="position-absolute top-50 start-50 translate-middle text-center form-container"
>
<div class="d-flex flex-wrap">
          <div class="">intolerances</div>
          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              type="checkbox"
              name="gluten"
              id="gluten"
            />
            <label class="form-check-label" for="gluten"> gluten </label>
          </div>
          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              aria-controls=" "
              type="checkbox"
              name="peanuts"
              id="peanuts"
            />
            <label class="form-check-label" for="peanuts">
              peanuts
            </label>
          </div>
          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              type="checkbox"
              name="sesame"
              id="sesame"
              />
              <label class="form-check-label" for="sesame">
                sesame
              </label>
          </div>

          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              type="checkbox"
              name="grain"
              id="grain"
            />
            <label class="form-check-label" for="grain">
              grain
            </label>
          </div>
          
          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              type="checkbox"
              name="soy"
              id="soy"
            />
            <label class="form-check-label" for="soy"> soy </label>
          </div>
         
          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              type="checkbox"
              name="sulphite"
              id="sulphite"
            />
            <label class="form-check-label" for="sulphite">
              sulphite
            </label>
          </div>
          
          <div class="form-check mx-2">
            <input
              class="form-check-input radioButton intolerance"
              type="checkbox"
              name="tree-nut"
              id="tree-nut"
            />
            <label class="form-check-label" for="tree nut">
              tree nut
            </label>
          </div>
  <h2 class="text-center"></h2>
  <hr />
   {{#each intolerances as |intolerance|}}
  <form id="signup-form">
     <div id="sign-up-error-messages"></div>
    <div class="d-flex flex-wrap">
      <div class="mb-3 w-100">
        <input
          type="text"
          class="form-control"
          id="firstName"
          placeholder="First Name"
        />
      </div>
      <div class="mb-3 w-100">
        <input
          type="text"
          class="form-control"
          id="lastName"
          placeholder="Last Name"
        />
      </div>
      <div class="mb-3 w-100">
        <input
          type="text"
          class="form-control"
          id="email"
          placeholder="Email"
        />
      </div>
      <div class="mb-3 w-100 sign-up inputs">
        <input
          type="password"
          class="form-control"
          value="FakePSW"
          id="myInput"
          placeholder="Password"
        />
      </div>
      <div class="mb-3 w-100">
        <input
          type="password"
          class="form-control"
           value="FakePSW"
          id="myInput"
          placeholder="confirmPassword"
        />
      </div>
      <div class="d-grid gap-2 w-100">
         <div class="sign-up-buttons-container"></div>
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </div>
  </form>
   {{/each}}
</div>