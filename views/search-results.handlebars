 {{#if loggedIn}}
  {{>private-nav}}  
  {{>private-searchbar}}
{{else}}
  {{>public-nav}}  
  {{>public-searchbar}}
{{/if}}

  <main><div><h1 class="text-center">Recipe Search Results</h1></div>

<div class="d-inline-flex flex-wrap justify-content-center p-4">
{{#each recipeData as |recipe|}}

   <div class="bg-transparent m-3"><div class="card p-2 bd-highlight" style="width: 20rem">
            <div class="card-body mx-auto bg-body">
              <img src={{recipe.image}} class="card-img-top" alt="Image of dish" />
              <h5 class="card-title text-center pt-4">{{recipe.title}}</h5>
            </div>
            <div class="d-flex flex-wrap justify-content-around p-3">
             <a href='/recipe/{{recipe.recipe_id}}' target="_blank" class="anchor-button-secondary mx-auto"> View recipe </a>
            </div>
          </div>
          </div>
          
 {{/each}}
 </div>
  <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-outline-success" type="button" id="renderMoreResults">
      Render more results
    </button>
  </div></main> 
