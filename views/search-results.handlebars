  {{>publicNavbar}}  
    <header>
      <h1>Hey Pal!</h1>
    </header>

   <div><h1 class="text-center">Recipe Search Results</h1></div>


{{#each recipeData as |recipe|}}
  
  <div
    class="card position-relative d-inline-flex  justify-content-between p-2 bd-highlight"
    style="width: 18rem">
   <a href="/recipe"> <div id= "recipe-card" class="card-body mx-auto">
      <h5 class="card-title text-center">{{recipe.title}}</h5>
      <img src={{recipe.image}} class="card-img-top" alt="Image of dish" />
        <div class="m-2 w-25 h-25"> <button
          id="save-recipe"
          type="click"
          class="btn btn-secondary input-group-text mb-3 fw-bold"> Save to favourites </button>
        </div>
    </div> </a>
  </div>
  {{/each}}
