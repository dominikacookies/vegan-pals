{{> public-nav }} 
   
<main class="login-page">
  <section class="login-form-container mx-auto">
    <div class="text-center mb-4">
      <h2 class="mb-3">Welcome back pal!</h2>
      <h3>Enter your details to login</h3>
    </div>
    <form id="login-form">
      <div id="login-error-messages"></div>
      <div class="mb-3 login-inputs">
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="Email address"
        />
      </div>
      <div class="mb-3 login-inputs">
        <input
          type="password"
          class="form-control"
          id="password"
          placeholder="Password"
        />
      </div>
      <div class="login-buttons-container">
        <div class="mb-3 d-grid gap-2">
          <button
            type="submit"
            class="login-button btn main-button-style mb-3 p-1"
          >
            Login
          </button>
        </div>
        <div class="mb-3 d-grid gap-2">
          <a href="/signup" class="btn mb-3 p-1 main-button-style">Signup</a>
        </div>
      </div>
    </form>
  </section>
</main>
