    <main class="login-page-container">
      <div class="login-container">
        <div class="text-center mb-5">
          <h2>Welcome back pal!</h2>
          <h3>Enter your details below to login now. </h3>
        </div>
        <form id="login-form">
          <div id="login-error-messages">

          </div>
          <div class="mb-3 login-inputs">
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Email address"
            />
          </div>
          <div class="mb-3 login-inputs">
            <input
              type="password"
              class="form-control"
              id="password"
              placeholder="Password"
            />
          </div>
          <div class="login-buttons-container">
            <div class="mb-3 d-grid gap-2">
              <button class="login-button" type="submit" class="bt mb-3">Login</button>
            </div>
            <div class="mb-3 d-grid gap-2 ">
              <a href="/signup" class="mb-3 p-1 sign-up-anchor">Signup</a>
            </div>
          </div>
        </form>
      </div>
    </main>  

