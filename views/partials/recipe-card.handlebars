<section
  class="recipe-card-container d-inline-flex flex-wrap"
  style="justify-content: center"
>
  <div class="main-recipe-card card">
    <a href="recipe/{{this.recipe_id}}">
      <div id="recipe-card" class="mx-auto">
        <img
          src="{{this.image}}"
          class="card-img-top mb-3"
          alt="Image of dish"
        />
        <h5 class="card-title text-center btn recipe-title fw-bold">
          {{this.dish_name}}
        </h5>
      </div>
    </a>
  </div>
</section>