
{{>private-nav}}
<main>
    <h1 class="pb-5">Choose a pal to cook with</h1>

    <div class="d-flex flex-wrap justify-content-around">
      {{#each pals as |pal|}}
          <div class="card d-inline-flex  justify-content-between p-2 bd-highlight text-center" style="width: 20rem">
            <div class="card-body mx-auto">
              <img src="/assets/images/avatars.png" class="card-img-top" alt="Image of dish" />
              <h5 class="card-title text-center pt-4">{{pal.first_name}} {{pal.last_name}}</h5>
              <p>About: {{ pal.bio }}</p>
            </div>
            <div class="d-flex flex-wrap justify-content-around">
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target='#pal{{pal.id}}'>
                Cook together
              </button>
            </div>
          </div>

        <div class="modal fade" id='pal{{pal.id}}' tabindex="-1" aria-labelledby='pal{{pal.id}}' aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" data-recipe={{recipeId}}> The details </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <p> Alright! Let's get this party started!</p>
                <p> Is this a breakfast, lunch or dinner get together? </p>
                <p> When date works for you?</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary", data>Send invite</button>
              </div>
            </div>
          </div>
        </div>
      {{/each }}
    </div>
</main> 