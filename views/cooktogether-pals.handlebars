
{{>private-nav}}
<main>
    <h1 class="pb-5">Choose a pal to cook with</h1>

    <div class="d-flex flex-wrap justify-content-around" id="pal-cards-container" data-recipe='{{recipeId}}'>
      {{#each pals as |pal|}}
          <div class="card d-inline-flex  justify-content-between p-2 bd-highlight text-center" style="width: 20rem">
            <div class="card-body mx-auto">
              <img src="/assets/images/avatars.png" class="card-img-top" alt="Image of dish" />
              <h5 class="card-title text-center pt-4">{{pal.first_name}} {{pal.last_name}}</h5>
              <p>About: {{ pal.bio }}</p>
            </div>
            <div class="d-flex flex-wrap justify-content-around">
              <button type="button" class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target='#pal{{pal.id}}'>
                Cook together
              </button>
            </div>
          </div>

        <div class="offcanvas offcanvas-end" id='pal{{pal.id}}' tabindex="-1" id="offcanvasRight" data-user='{{pal.id}}' aria-labelledby="offcanvasRightLabel">
          <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">The details</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
                <p> Alright! Let's get this party started!</p>
                <p> Is this a breakfast, lunch or dinner get together? </p>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="breakfast">
                    <label class="form-check-label" for="inlineRadio1">Breakfast</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="lunch">
                    <label class="form-check-label" for="inlineRadio2">Lunch</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="din">
                    <label class="form-check-label" for="inlineRadio3">Dinner</label>
                  </div>
                <p> What date works for you?</p>
                  <input type="text" class="datepicker col s10 offset-l1 offset-m1 offset-s1 text-black center-align" id="date-input" placeholder="Select your date"/>
                <p> What's the best way to contact you? </p>
                  <textarea class="contact-details"> </textarea>
                <p> Message </p>
                 <textarea class="message"> </textarea>
                <div>
                <button type="button" class="btn btn-primary", id="cooktogether-button">Send invite</button>
                </div>
          </div>  
        </div>
      {{/each }}
    </div>
  </div>
</main> 